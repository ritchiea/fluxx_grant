%h1= "#{model.initiative.sub_program.program.name if model.initiative && model.initiative.sub_program && model.initiative.sub_program.program} / #{model.initiative.sub_program.name if model.initiative && model.initiative.sub_program} / #{model.initiative.name if model.initiative} / #{model.name}"

- current_year = params[:spending_year] ?  params[:spending_year].to_i : Time.now.year
- year_range = ((current_year-25)..(current_year + 2))
= semantic_form_for FundingSourceAllocation.new(:spending_year => current_year), :html => {:class => 'no-submit-button'} do |form|
  = form.input :spending_year, :label => "Spending Year", :as => :select, :collection => year_range.to_a.reverse, :input_html => {"data-target".to_sym => ".funding-source-allocations-partial-span,.program-show-partial-span", :class => "refresh-partial"}

= render :partial => 'program_budgets/list_program_budget', :locals => {:sub_initiative_id => model.id, :spending_year => current_year}

= render :partial => 'funding_source_allocations/list_funding_source_allocations', :locals => {:models => (model.funding_source_allocations(:show_unapproved => true, :spending_year => current_year)), :sub_initiative_id => model.id, :program_attributes => {:spending_year => current_year, :sub_initiative_id => model.id}, :parent_model => "sub_initiative", :do_suppress_add => Fluxx.config(:suppress_funding_source_allocation_at_sub_initiative) == "1"}

= render :partial => "notes/list_notes", :locals => { :model => model, :class_type => Request.name}
= render :partial => "audits/list_audits", :locals => { :model => model}
